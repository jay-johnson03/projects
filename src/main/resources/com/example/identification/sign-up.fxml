<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.identification.SignUpController">
   <children>
       <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
             <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="51.0" prefWidth="255.0" text="Sign Up">
                 <font>
                     <Font name="System Bold Italic" size="30.0" />
                 </font>
               <effect>
                  <Bloom />
               </effect>
             </Label>
            <Label alignment="CENTER" prefHeight="32.0" prefWidth="87.0" text="Name : " />
            <TextField fx:id="textName" layoutX="200.0" layoutY="200.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="425.0" />
            <Label alignment="CENTER" prefHeight="31.0" prefWidth="83.0" text="Email :" />
            <TextField fx:id="textEmail" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="426.0" />
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="109.0" text="Password : " />
            <TextField fx:id="textFieldPassword" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="429.0" />
            <Button fx:id="signupConfirm" onAction="#setOnAction" prefHeight="33.0" prefWidth="65.0" text="Sign Up" />
         </children>
      </VBox>
       <VBox />
   </children>
</AnchorPane>
